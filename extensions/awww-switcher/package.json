{
  "$schema": "https://raw.githubusercontent.com/vicinaehq/vicinae/refs/heads/main/extra/schemas/extension.json",
  "name": "awww-switcher",
  "title": "AWWW Switcher",
  "description": "Switch your wallpaper with awww and call a color gen to update color pallets while you are at it",
  "categories": [],
  "license": "MIT",
  "author": "sovereign",
  "contributors": [],
  "pastContributors": [],
  "icon": "extension_icon.png",
  "commands": [
    {
      "name": "wpgrid",
      "title": "Wallpaper Grid",
      "subtitle": "Wallpaper Grid",
      "description": "Switch wallpapers using awww",
      "mode": "view"
    },
    {
      "name": "wprandom",
      "title": "Random Wallpaper",
      "subtitle": "Let RNG choose your style",
      "description": "Switch wallpapers using awww",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "wallpaperPath",
      "title": "Wallpaper Path",
      "description": "The path containing the wallpaper images",
      "required": true,
      "type": "textfield"
    },
    {
      "name": "provider",
      "title": "Wallpaper provider",
      "description": "What software renders your wallpaper?",
      "required": true,
      "type": "dropdown",
      "data": [
        {
          "title": "AWWW",
          "value": "awww"
        },
        {
          "title": "KDE plasma",
          "value": "kde-plasma"
        },
        {
          "title": "MPVPaper",
          "value": "mpvpaper"
        },
        {
          "title": "Custom (Set custom command in the extension preferences)",
          "value": "custom"
        }
      ]
    },
    {
      "name": "gridRows",
      "title": "Grid Rows",
      "description": "How many rows do you want to see in the grid?",
      "required": false,
      "type": "textfield",
      "default": "4"
    },
    {
      "name": "awwwtransitionType",
      "title": "Transition Type for AWWW",
      "description": "The animation type of the AWWW transition",
      "required": false,
      "type": "dropdown",
      "data": [
        {
          "title": "None",
          "value": "none"
        },
        {
          "title": "Simple",
          "value": "simple"
        },
        {
          "title": "Fade",
          "value": "fade"
        },
        {
          "title": "Left",
          "value": "left"
        },
        {
          "title": "Right",
          "value": "right"
        },
        {
          "title": "Top",
          "value": "top"
        },
        {
          "title": "Bottom",
          "value": "bottom"
        },
        {
          "title": "Wipe",
          "value": "wipe"
        },
        {
          "title": "Wave",
          "value": "wave"
        },
        {
          "title": "Grow",
          "value": "grow"
        },
        {
          "title": "Center",
          "value": "center"
        },
        {
          "title": "Any",
          "value": "any"
        },
        {
          "title": "Outer",
          "value": "outer"
        },
        {
          "title": "Random",
          "value": "random"
        }
      ],
      "default": "random"
    },
    {
      "name": "awwwtransitionDuration",
      "title": "Transition Duration for AWWW",
      "description": "Duration of the awww transition in seconds",
      "required": false,
      "type": "textfield",
      "default": "3"
    },
    {
      "name": "awwwtransitionStep",
      "title": "Transition Step for AWWW",
      "description": "The amount of steps from old wallpaper RBG to new wallpaper RBG",
      "required": false,
      "type": "dropdown",
      "data": [
        {
          "title": "Slowest Possible",
          "value": "1"
        },
        {
          "title": "Slow",
          "value": "45"
        },
        {
          "title": "Default",
          "value": "90"
        },
        {
          "title": "Quick",
          "value": "120"
        },
        {
          "title": "Fast",
          "value": "200"
        },
        {
          "title": "Instant",
          "value": "255"
        }
      ],
      "default": "90"
    },
    {
      "name": "awwwtransitionFPS",
      "title": "Transition FPS of the AWWW animation",
      "description": "The target FPS to play the animation at",
      "type": "textfield",
      "required": false,
      "default": "60"
    },
    {
      "name": "mpvpaperSocket",
      "title": "MPVPaper socket path",
      "description": "The path to an mpvpaper socket to connect to",
      "type": "textfield",
      "required": false,
      "default": "/run/user/1000/mpvpaper.sock"
    },
    {
      "name": "colorGenTool",
      "title": "Color Generator",
      "description": "Which color generation tool do you use?",
      "required": true,
      "type": "dropdown",
      "data": [
        {
          "title": "None",
          "value": "none"
        },
        {
          "title": "Matugen",
          "value": "matugen"
        },
        {
          "title": "Pywal",
          "value": "pywal"
        },
        {
          "title": "Wpgtk",
          "value": "wpgtk"
        },
        {
          "title": "Schemer2",
          "value": "schemer2"
        },
        {
          "title": "Colorz",
          "value": "colorz"
        },
        {
          "title": "Haishoku",
          "value": "haishoku"
        },
        {
          "title": "Wallust",
          "value": "wallust"
        }
      ],
      "default": "none"
    },
    {
      "label": "Toggle Vicinae",
      "name": "toggleVicinaeSetting",
      "title": "Toggle Vicinae",
      "description": "Set to true to toggle vicinae on wallpaper selection",
      "type": "checkbox",
      "required": false,
      "default": true
    },
    {
      "label": "Show Image Details",
      "name": "showImageDetails",
      "title": "Show Image Details",
      "description": "Set to true to show image dimensions and size in MB.",
      "type": "checkbox",
      "required": false,
      "default": true
    },
    {
      "name": "postProduction",
      "title": "Imagemagick Post-Production",
      "description": "Would you like to process your selected image?",
      "required": false,
      "type": "dropdown",
      "data": [
        {
          "title": "No",
          "value": "no"
        },
        {
          "title": "Gray Scale",
          "value": "grayscale"
        },
        {
          "title": "Gray Scale + Blur",
          "value": "grayscaleblur"
        },
        {
          "title": "Gray Scale + Heavy Blur",
          "value": "grayscaleheavyblur"
        },
        {
          "title": "Blur",
          "value": "lightblur"
        },
        {
          "title": "Blur + Darken",
          "value": "lightblurdarken"
        },
        {
          "title": "Heavy Blur",
          "value": "heavyblur"
        },
        {
          "title": "Heavy Blur + Darken",
          "value": "heavyblurdarken"
        },
        {
          "title": "Negate",
          "value": "negate"
        }
      ],
      "default": "no"
    },
    {
      "name": "leftMonitor",
      "title": "Left Monitor Name",
      "description": "The Name of the monitor that shows the left side of the image after being split",
      "required": false,
      "type": "textfield"
    },
    {
      "name": "rightMonitor",
      "title": "Right Monitor Name",
      "description": "The Name of the monitor that shows the right side of the image after being split",
      "required": false,
      "type": "textfield"
    },
    {
      "name": "postCommand",
      "title": "Post Command",
      "description": "Run a command or even a script after setting a new wallpaper",
      "required": false,
      "type": "textfield"
    }
  ],
  "scripts": {
    "build": "vici build",
    "dev": "vici develop",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@vicinae/api": "^0.16.2",
    "image-size": "^2.0.2",
    "jimp": "^1.6.0"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "prettier": "^3.7.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.48.0"
  }
}
